# alias share
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --colour=auto'

alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'
alias sl='ls'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i -v'

alias tmux='tmux -2'

# local setting
# change directory go work
if [[ -d "$GOPATH/src/github.com/$USERNAME" ]]; then
  alias gw='pushd $GOPATH/src/github.com/$USERNAME/'
else
  echo "do not find go work directory"
fi

# if exist vim
if [[ -x "$HOME/opt/vim/bin/vim" ]]; then
  # local build
  alias viml='$HOME/opt/vim/bin/vim'
else
  echo "do not filnd local vim"
fi


# sonictemplate add to commite
if [[ -n "$DOTFILES_ROOT" ]] && [[ -r "$DOTFILES_ROOT/vim/sonicdir/allcommit.sh" ]]; then
  alias sonic='bash $DOTFILES_ROOT/vim/sonicdir/allcommit.sh'
else
  echo "do not find sonicdir"
fi
