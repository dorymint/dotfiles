# alias share
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --colour=auto'

alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'
alias sl='ls'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i -v'

alias tmux='tmux -2'
alias emacs='emacs -nw'

alias :q='exit'

# local setting
# change directory go work
if [[ -d "$GOPATH/src/github.com/$USERNAME" ]]; then
  alias gw='pushd $GOPATH/src/github.com/$USERNAME'
else
  echo 'dotfiles/share/alias: not found $GOPATH/src/github.com/$USERNAME'
fi

#  goto src golang official pkg
if [[ -d "$GOROOT/src" ]]; then
  alias gofficial='pushd $GOROOT/src && vim -R . '
else
  echo 'dotfiles/share/alias: not found GOROOT/src'
fi

# local vim
if [[ -x "$HOME/opt/vim/bin/vim" ]]; then
  alias viml='$HOME/opt/vim/bin/vim'
else
  echo 'dotfiles/share/alias: not found $HOME/opt/vim/bin/vim'
fi

# nvim
if [[ -x "$HOME/opt/neovim/bin/nvim" ]]; then
  alias nvim='$HOME/opt/neovim/bin/nvim'
else
  echo 'dotfiles/share/alias: not found $HOME/opt/neovim/bin/nvim'
fi

# for vim plugin sonictemplate: add to commite
if [[ -n "$DOTFILES_ROOT" ]] && [[ -r "$DOTFILES_ROOT/vim/sonicdir/allcommit.sh" ]]; then
  alias sonic='bash $DOTFILES_ROOT/vim/sonicdir/allcommit.sh'
else
  echo "dotfiles/share/alias: not found sonicdir"
fi
# EOF
