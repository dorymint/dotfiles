#
# common share alias
#
alias :q='exit'
alias mkdir='mkdir -p -v'
alias ping='ping -c 3'
alias ..='cd ..'

alias rm='rm -I -v'
alias cp='cp -i'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# for carry of alias
alias sudo='sudo '


## local
# cd go work space
if [ -d "$GOPATH"/src/github.com/"$USERNAME" ]; then
  alias gw='cd $GOPATH/src/github.com/$USERNAME'
else
  echo 'alias: not found $GOPATH/src/github.com/$USERNAME'
fi

#  goto src golang official pkg
if [ -d "$GOROOT"/src ] && [ -x "$GOROOT"/bin/go ]; then
  alias gosrc='cd $GOROOT/src && vim -R . '
else
  echo 'alias: not found local go'
fi

# vim
if [ -x "$HOME"/opt/vim/bin/vim ]; then
  alias viml='$HOME/opt/vim/bin/vim'
else
  echo 'alias: not found $HOME/opt/vim/bin/vim'
fi

# nvim
if [ -x "$HOME"/opt/neovim/bin/nvim ]; then
  alias nvim='$HOME/opt/neovim/bin/nvim'
else
  echo 'alias: not found $HOME/opt/neovim/bin/nvim'
fi

# for vim plugin sonictemplate: add to commite
if [ -x "$DOTFILES_ROOT"/vim/sonicdir/allcommit.bash ]; then
  alias sonic='$DOTFILES_ROOT/vim/sonicdir/allcommit.bash'
else
  echo "alias: not found sonicdir/allcommit.bash"
fi

# peco
if [ -x "$HOME"/bin/peco ]; then
  alias cdp='cd "$(find . -type d ! -path "*.git*" !  -path "*.deps*" | peco)"'
  [ -x $(which reps.sh) ] && alias reps='cd "$(reps.sh status | peco)"'
else
  echo 'alias: not found $HOME/bin/peco'
fi

# for termite
[ "$TERM" = "xterm-termite" ] && alias ssh='TERM=xterm-256color ssh'

[ -x "$(which mplayer)" ] && alias mplayerbgm='mplayer -ao pulse -vo null '

alias ww='cd $HOME/github.com/$USER'
alias dotfiles='cd $DOTFILES_ROOT'
alias dot='cd $DOTFILES_ROOT'
[ -x "$(which sway)" ] && alias sway='XKB_DEFAULT_LAYOUT=jp sway'

# EOF
