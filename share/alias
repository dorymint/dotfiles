# share/alias


# common
alias la='command ls -lah --color=auto'
alias :q='exit'
alias mkdir='command mkdir -p -v'
alias ping='command ping -c 3'
alias ..='cd ..'

alias rm='command rm -I -v'
alias cp='command cp -i'
alias ln='command ln -i'
alias chown='command chown --preserve-root'
alias chmod='command chmod --preserve-root'
alias chgrp='command chgrp --preserve-root'

## for carry of alias
alias sudo='command sudo '


# local
## cd
[ which gw 2> /dev/null ] || alias gw='cd "$GOPATH/src/github.com/$USERNAME"'
[ which ww 2> /dev/null ] || alias ww='cd "$HOME/github.com/$USER"'
[ which dot 2> /dev/null ] || alias dot='cd "$DOTFILES_ROOT"'
alias dotfiles='cd "$DOTFILES_ROOT"'

##  goto src golang official pkg
if [ -d "$GOROOT"/src ] && [ -x "$(which vim)" ]; then
  alias gosrc='cd "$GOROOT/src" && vim -R . '
else
  echo 'alias: not found local go or vim'
fi

## vim
if [ -x "$HOME"/opt/vim/bin/vim ]; then
  alias viml='"$HOME"/opt/vim/bin/vim'
else
  echo 'alias: not found $HOME/opt/vim/bin/vim'
fi

## nvim
if [ -x "$HOME"/opt/neovim/bin/nvim ]; then
  alias nvim='"$HOME"/opt/neovim/bin/nvim'
else
  echo 'alias: not found $HOME/opt/neovim/bin/nvim'
fi

## for vim plugin sonictemplate: add to commite
if [ -x "$DOTFILES_ROOT"/vim/sonicdir/allcommit.bash ]; then
  alias sonic='"$DOTFILES_ROOT"/vim/sonicdir/allcommit.bash'
else
  echo "alias: not found sonicdir/allcommit.bash"
fi

## peco
if [ -x "$(which peco)" ]; then
  [ -x "$(which reps.sh)" ] && ! [ which reps 2> /dev/null ] && alias reps='cd "$(reps.sh status | peco)"'
  [ which cdp 2> /dev/null ] || alias cdp='cd "$(find . -type d ! -path "*.git*" !  -path "*.deps*" | peco)"'
  [ which gwp 2> /dev/null ] || alias gwp='gw && cdp'
else
  echo 'alias: not found peco'
fi

## etc
[ "$TERM" = "xterm-termite" ] && alias ssh='TERM=xterm-256color ssh'
[ -x "$(which mplayer)" ] && alias mplayerbgm='command mplayer -ao pulse -vo null '
[ -x "$(which sway)" ] && alias sway='XKB_DEFAULT_LAYOUT=jp sway'
[ -x "$(which emacs)" ] && alias emacs='command emacs -nw'


# EOF
