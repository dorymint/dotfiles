#
# common alias share
#
alias :q='exit'
alias mkdir='mkdir -p -v'
alias ping='ping -c 3'
alias ..='cd ..'

alias rm='rm -I -v'
alias cp='cp -i'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# Privileged access
if (( UID != 0 )); then
  alias sudo='sudo '
fi


## local setting
# cd go work space
if [[ -d "$GOPATH/src/github.com/$USERNAME" ]]; then
  alias gw='cd $GOPATH/src/github.com/$USERNAME'
else
  echo 'dotfiles/share/alias: not found $GOPATH/src/github.com/$USERNAME'
fi

#  goto src golang official pkg
if [[ -d "$GOROOT/src" ]] && [[ -x "$GOROOT/bin/go" ]]; then
  alias gosrc='cd $GOROOT/src && vim -R . '
  #alias go='$GOROOT/bin/go'
else
  echo 'dotfiles/share/alias: not found local go'
fi

# vim
if [[ -x "$HOME/opt/vim/bin/vim" ]]; then
  alias viml='$HOME/opt/vim/bin/vim'
else
  echo 'dotfiles/share/alias: not found $HOME/opt/vim/bin/vim'
fi

# nvim
if [[ -x "$HOME/opt/neovim/bin/nvim" ]]; then
  alias nvim='$HOME/opt/neovim/bin/nvim'
else
  echo 'dotfiles/share/alias: not found $HOME/opt/neovim/bin/nvim'
fi

# for vim plugin sonictemplate: add to commite
if [[ -r "$DOTFILES_ROOT/vim/sonicdir/allcommit.bash" ]]; then
  alias sonic='bash $DOTFILES_ROOT/vim/sonicdir/allcommit.bash'
else
  echo "dotfiles/share/alias: not found sonicdir"
fi

alias ww='cd $HOME/github.com/$USER'
alias dotfiles='cd $DOTFILES_ROOT'
# EOF
