# share/alias
# common
alias la='command ls -lah --color=auto'
alias :q='exit'
alias mkdir='command mkdir -p -v'
alias ping='command ping -c 3'
alias ..='cd ..'

alias rm='command rm -I -v'
alias cp='command cp -i'
alias ln='command ln -i'
alias chown='command chown --preserve-root'
alias chmod='command chmod --preserve-root'
alias chgrp='command chgrp --preserve-root'

## for carry of alias
alias sudo='command sudo '

# local
## cd
alias gw='cd "$GOPATH"/src/github.com/"$USER"'
alias ww='cd "$HOME"/github.com/"$USER"'
alias dot='cd "$HOME"/dotfiles'
alias dotfiles='cd "$HOME"/dotfiles'

##  goto src golang official pkg
if [ -d "$GOROOT"/src ] && [ -x "$(command which vim)" ]; then
  alias gosrc='cd "$GOROOT/src" && vim -R . '
fi

## vim
if [ -x "$HOME"/opt/vim/bin/vim ]; then
  alias viml='"$HOME"/opt/vim/bin/vim'
fi

## nvim
if [ -x "$HOME"/opt/neovim/bin/nvim ]; then
  alias nvim='"$HOME"/opt/neovim/bin/nvim'
fi

## for vim plugin sonictemplate: add to commite
if [ -x "$HOME/dotfiles"/vim/sonicdir/allcommit.bash ]; then
  alias sonic='"$HOME/dotfiles"/vim/sonicdir/allcommit.bash'
fi

## peco
if [ -x "$(builtin command -v peco)" ]; then
  if [ -x "$(builtin command -v reps.sh)" ]; then
    alias reps='cd "$(reps.sh status | peco)"'
  fi
  alias cdl='cd "$(dirs -pl | peco)"'
  alias cdp='cd "$(find . -type d ! -path "*.git*" !  -path "*.deps*" | peco)"'
  alias gwp='gw && cdp'
  if [ -x "$(builtin command -v todogotcha)" ]; then
    if alias viml &> /dev/null; then
      alias gwtodo='gw && viml "$(todogotcha -trim=false | peco)"'
    else
      alias gwtodo='gw && vim "$(todogotcha -trim=false | peco)"'
    fi
  fi
fi

# sway
if [ -x "$(builtin command -v sway)" ]; then
  alias sway='XKB_DEFAULT_LAYOUT=jp XKB_DEFAULT_MODEL=pc106 WLC_REPEAT_DELAY=200 WLC_REPEAT_RATE=30 sway'
fi

## etc
[ "$TERM" = "xterm-termite" ] && alias ssh='TERM=xterm-256color ssh'
[ -x "$(builtin command -v mplayer)" ] && alias mplayerbgm='command mplayer -ao pulse -vo null '
[ -x "$(builtin command -v emacs)" ] && alias emacs='command emacs -nw'
alias timers 2> /dev/null || alias timers='systemctl --no-pager --user list-timers'
alias tmux='tmux -2'
# EOF
