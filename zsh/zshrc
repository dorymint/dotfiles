# zhsrc

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# lily
[[ "$(uname -n)" == "lily" ]] && echo "hello lily"

# define DOTFILES_ROOT
source $HOME/dotfiles/share/dotenv.sh
# environment
if [[ -n $DOTFILES_ROOT ]]; then
  # use grml zshrc, require don't move it
  if [[ "$(uname -r)" == "*\(ARCH\)\|\(arch\)*" ]]; then
    echo "use grml in dotfiles"
    source $DOTFILES_ROOT/zsh/zshrc.grml
  else
    pacman -Q grml-zsh-config &> /dev/null ||
      echo "recommend: pacman -S grml-zsh-config"
  fi
  # TODO: add any env

  # golang
  source $DOTFILES_ROOT/share/goenv.sh

  # alias
  source $DOTFILES_ROOT/share/alias
  [ -r "$DOTFILES_ROOT"/etc/alias ] && source "$DOTFILES_ROOT"/etc/alias
else
  echo 'DOTFILES_ROOT=""'
fi

# setopt
setopt autocd
setopt autopushd
setopt pushdignoredups
# EOF
