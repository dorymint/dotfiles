# bashrc


## check interactive
# If not running interactively, don't do anything
[[ $- != *i* ]] && return


## alias
if [ -n "$DOTFILES_ROOT" ]; then
  source "$DOTFILES_ROOT"/share/alias
  [ -f "$DOTFILES_ROOT"/etc/alias ] && source "$DOTFILES_ROOT"/etc/alias
fi


## lily
if [[ "$(uname -n)" == *lily* ]] && [ "$SHLVL" -eq 1 ]; then
  echo "hello lily"
fi


## call zsh
if [ -x /bin/zsh ] && [ -f "$HOME"/.zshrc ]; then
  if [ "$SHLVL" -eq 1 ]; then
    /bin/zsh
  fi
fi
# EOF
