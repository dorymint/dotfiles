# bashrc

# env
source $HOME/dotfiles/share/dotenv.sh
if [[ "$DOTFILES_ROOT" != "" ]]; then

  # golang
  source $DOTFILES_ROOT/share/goenv.sh

  # TODO:add any env

  source $DOTFILES_ROOT/bash/function/jisho
  source $DOTFILES_ROOT/bash/alias

  source $DOTFILES_ROOT/share/bash_completion_tmux.sh

fi


# 環境変数の設定はrcでは登録せず
# functionをsourceしておいて必要に応じて呼ぶようにするべき?
# 取り敢えずbashrcで呼ぶようにしておく

# call zsh
echo "call zsh"
if [[ -f /bin/zsh ]] && [[ $SHLVL -eq 1 ]]; then
  /bin/zsh
fi
echo "exit zsh"

