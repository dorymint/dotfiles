#!/bin/sh

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

# disable display power management signaling
xset s off
xset -dpms
xset r rate 200 30
setxkbmap jp 106

# fcitx
# TODO: consider into .i3/config
if [ -x /usr/bin/fcitx-autostart ]; then
  export GTK_IM_MODULE=fcitx
  export QT_IM_MODULE=fcitx
  export XMODIFIERS="@im=fcitx"
  fcitx-autostart
fi

# for i3
# TODO: consider into .i3/config
if [ -d "$HOME"/Pictures/links ] && [ -x /usr/bin/feh ]; then
  wallpath="$HOME"/Pictures/links
  fehbg="feh --bg-max"
  wall="$wallpath"/"$(ls "$wallpath" | shuf -n 1)"
fi
if [ -x /usr/bin/compton ]; then
  compton="/usr/bin/compton"
fi

# session
session="${1:-i3}"
case "$session" in
  i3|i3wm )
    [ -n "${fehbg}" ] && ${fehbg} "${wall}" &
    [ -n "${compton}" ] && ${compton} &
    exec /usr/bin/i3;;
  i3-log|i3wm-log )
    echo "xinit i3-log: $(date "+%Y-%m-%d")" > ~/.i3/i3.log
    [ -n "${fehbg}" ] && ${fehbg} "${wall}" &
    [ -n "${compton}" ] && ${compton} &
    exec /usr/bin/i3 -V -d all >> ~/.i3/i3.log;;
  * ) exec /usr/bin/i3;;
esac
# EOF
