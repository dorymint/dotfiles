# backlight brightness
# TODO: consider
mode "backlight" {
  bindsym k exec --no-startup-id sh -c 'sudo brightness.sh -incper'
  bindsym j exec --no-startup-id sh -c 'sudo brightness.sh -decper'
  bindsym Shift+m exec --no-startup-id sh -c 'sudo brightness.sh -setmax'
  bindsym m exec --no-startup-id sh -c 'sudo brightness.sh -setmin'

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym q      mode "default"
}

# TODO: consider mode selector
mode "mode_selector" {
  # TODO: fix notify-send
  bindsym h exec --no-startup-id sh -c 'notify-send "mode: mode_selector" "$(echo -e "[q|Escape|Return]\tmode to default\nv\tvolume\nr\tresize\n")"'

  bindsym v mode "volume"
  bindsym r mode "resize"
  bindsym b mode "backlight"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym q mode "default"
}
bindsym $mod+m mode "mode_selector"

